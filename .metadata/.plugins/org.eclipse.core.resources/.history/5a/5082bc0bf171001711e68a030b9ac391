#ifndef HEADERS_H_
#define HEADERS_H_

#include <bits/stdc++.h>
using namespace std;

class node{
public:
	int data;
	node *next;
	node* setData(int data);
	int getData();
};

node* node::setData(int data){
	this->data = data;
	this->next = NULL;
	return this;
}
int node::getData(){
	return this->data;
}

class LinkedList{
	node *head;
public:
	LinkedList();
	node* getNode(int data);
	void createlist(void);
	void printList(void);
};

LinkedList::LinkedList(void){
	head = NULL;
}

node *LinkedList::getNode(int data){
	node n;
	return n.setData(data);
}
void LinkedList::createlist(){
	srand(time(NULL));
	head = getNode(rand() % 10001);
	node *temp = head;
	int len = rand() % 10001;
	for(int i = 0;i < len;i++){
		temp->next = getNode(rand() % 10001);
		temp = temp->next;
	}
}

void LinkedList::printList(){
	node *temp = head;
	while(temp){
		cout << temp->getData() << " ";
		temp = temp->next;
	}
	cout << endl;
}

#endif /* HEADERS_H_ */
